{
  "name": "ecommerce-mini-backend",
  "version": "1.0.0",
  "description": "Full-stack e-commerce backend with Node.js, TypeScript, GraphQL, and PostgreSQL",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:push": "prisma db push",
    "db:seed": "tsx src/prisma/seed.ts",
    "db:studio": "prisma studio",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "docker:build": "docker build -t ecommerce-backend .",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "keywords": [
    "ecommerce",
    "typescript",
    "graphql",
    "postgresql",
    "prisma",
    "docker",
    "rest-api"
  ],
  "author": "Kimberly Su",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^6.5.0",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "graphql": "^16.10.0",
    "graphql-yoga": "^5.10.6",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.13.5",
    "prisma": "^6.5.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^3.0.9"
  }
}
